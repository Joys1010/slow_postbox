<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slow_postbox">

    <application
        android:allowBackup="true"
        android:icon="@drawable/slow_postbox"
        android:label="@string/app_name"
        android:roundIcon="@drawable/slow_postbox"
        android:supportsRtl="true"
        android:theme="@style/Theme.Slow_postbox">
        <activity
            android:name=".PostList"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true" />
        <activity
            android:name=".Post"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true" />
        <activity
            android:name=".ShowCalendar"
            android:exported="true" />
        <activity
            android:name=".WritePost"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>